{
  "name": "public-event-planner",
  "version": "0.0.1",
  "description": "Aggregates data",
  "main": "dist/web.js",
  "scripts": {
    "start": "nf start",
    "postinstall": "npm run-script ng-build && tsc -p ./src/web --outDir dist",
    "createdb": "ts-node src/scripts/create-db.ts",
    "test": "(cd src/web; karma start)",
    "ng-build": "npm run-script dev:build && npm run-script uglify",
    "ng-watch": "npm run-script copy:watch & npm run-script sass:watch & npm run-script template:watch & npm run-script tsc:watch",
    "pre-e2e-test": "webdriver-manager start",
    "e2e-test": "tsc -p e2e-test/e2e.tsconfig.json && protractor",
    "dev:build": "npm run-script copy && npm run-script sass:build && npm run-script template:build && npm run-script tsc:build",
    "tsc:build": "webpack --config src/ng/src/webpack.config.js",
    "tsc:watch": "webpack -w --config src/ng/src/webpack.config.js",
    "template:build": "nghtml2js -p src -f 'src/components/**/*.html' -o dist/static/templates.js",
    "sass:build": "node-sass src/ng/src/app.scss --source-map=true -o dist/static",
    "sass:watch": "node-sass -w -r src/ng/src/app.scss --source-map=true -o dist/static",
    "copy": "cp -r src/ng/static/* dist/static/static",
    "copy:watch": "onchange 'static/*' -- npm run-script copy",
    "uglify": "npm run-script js:uglify && npm run-script css:uglify",
    "js:uglify": "uglifyjs dist/static/event-planner.js -o dist/static/event-planner.$npm_package_version.min.js --compress --mangle",
    "css:uglify": "uglifycss dist/static/app.css > dist/static/event-planner.$npm_package_version.min.css"
  },
  "engines": {
    "node": "7.10.1"
  },
  "author": "alistair.davidson@snp.org",
  "dependencies": {
    "@types/aws-sdk": "0.0.42",
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.0",
    "@types/connect-flash": "0.0.31",
    "@types/cookie-parser": "^1.3.30",
    "@types/ejs": "^2.3.33",
    "@types/express": "4.0.35",
    "@types/express-session": "^1.15.1",
    "@types/geojson": "1.0.0",
    "@types/lodash": "4.14.53",
    "@types/passport": "^0.3.3",
    "@types/passport-local": "^1.0.30",
    "@types/sequelize": "4.0.42",
    "@types/twitter": "0.0.28",
    "@types/uuid": "^2.0.29",
    "aws-sdk": "^2.36.0",
    "bcrypt": "^1.0.2",
    "body-parser": "1.17.1",
    "capitalize": "^1.0.0",
    "connect-flash": "^0.1.1",
    "contentful": "3.8.1",
    "contentful-management": "3.3.0",
    "cookie-parser": "^1.4.3",
    "ejs": "^2.5.6",
    "express": "4.14.1",
    "express-fileupload": "0.1.2",
    "express-session": "^1.15.4",
    "foreman": "2.0.0",
    "geojson-utils": "1.1.0",
    "lodash": "4.17.4",
    "node-sass": "^4.5.3",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "6.1.2",
    "pg-hstore": "2.3.2",
    "pg-native": "1.10.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.0",
    "sequelize": "3.30.2",
    "throng": "4.0.0",
    "twitter": "1.7.0",
    "typescript": "^2.4.1",
    "uuid": "^3.0.1",
    "@types/angular-cookies": "^1.4.3",
    "@types/angular-material": "^1.1.49",
    "@types/angular-ui-router": "^1.1.36",
    "@uirouter/angularjs": "^1.0.3",
    "@types/angular": "^1.6.4",
    "@types/jasmine": "^2.5.36",
    "@types/karma": "^0.13.35",
    "@types/node": "^6.0.46",
    "@types/selenium-webdriver": "^3.0.3",
    "angular": "^1.6.4",
    "angular-animate": "^1.6.4",
    "angular-aria": "^1.6.4",
    "angular-cookies": "^1.6.4",
    "angular-material": "^1.1.3",
    "angular-messages": "^1.6.4",
    "angular-sanitize": "1.6.4",
    "angular-template-cache": "^1.2.0",
    "expose-loader": "^0.7.3",
    "imports-loader": "^0.7.1",    
    "script-loader": "^0.7.0",
    "ts-loader": "^2.0.1",    
    "uglify-js": "^2.8.4",
    "uglify-loader": "^2.0.0",
    "uglifycss": "0.0.25",
    "webpack": "^2.2.1"
  },
  "devDependencies": {
    "jasmine": "2.5.3",
    "karma": "1.5.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-jasmine": "1.1.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-typescript": "2.1.7",
    "sequelize-cli": "2.1.0",
    "jasmine-core": "^2.5.2",
    "jasmine-spec-reporter": "^4.0.0",
    "karma-cli": "^1.0.1",
    "onchange": "^3.2.1",
    "protractor": "~4.0.14"
  }
}
